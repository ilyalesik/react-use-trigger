{
  "name": "react-use-trigger",
  "version": "0.2.1",
  "description": "React effect trigger hook",
  "main": "./index.js",
  "scripts": {
    "flow": "flow",
    "flow:check": "flow check",
    "test": "jest --silent",
    "prettier": "prettier \"*/**/*.js\" --ignore-path ./.prettierignore --write && git add . && git status",
    "check-size": "size-limit",
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf dist",
    "build:lib": "cross-env BABEL_ENV=production babel src --out-dir dist --ignore '**/__tests__/**'",
    "build:flow": "gen-flow-files src --out-dir dist",
    "lint": "eslint '**/*.{js,jsx}' --quiet",
    "prepublish": "npm run flow:check && npm run test && npm run build && npm run check-size"
  },
  "keywords": [
    "react",
    "hook"
  ],
  "eslintConfig": {
      "extends": "@logux/eslint-config/browser",
      "rules": {
          "node/no-unpublished-require": "off",
          "es5/no-es6-static-methods": "off",
          "node/no-missing-require": "off",
          "func-style": "off"
      }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "moduleNameMapper": {
      "\\.(svg|png)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "pre-commit": [
    "flow:check",
    "test"
  ],
  "size-limit": [
      {
          "path": "index.js",
          "limit": "236 B"
      },
      {
          "path": [
              "index.js",
              "useTrigger.js"
          ],
          "limit": "305 B",
          "ignore": [
              "react"
          ]
      },
      {
          "path": [
              "index.js",
              "useTrigger.js",
              "useTriggerEffect.js"
          ],
          "limit": "330 B",
          "ignore": [
              "react"
          ]
      }
  ],
  "author": "Ilya Lesik <ilialesik@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "nanoid": "^2.0.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@logux/eslint-config": "^28.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.95.1",
    "gen-flow-files": "^0.4.1",
    "jest": "^24.5.0",
    "jest-dom": "^3.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.0.3",
    "rimraf": "^2.6.3",
    "size-limit": "^1.0.0"
  }
}
